@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Details";
}

    <div class="card-deck">
      @foreach (var employee in Model)
        {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
          <div class="card-header">
            <h3>@employee.Name</h3>
          </div>  
          <img class="card-img-top imageThumbnail" src="@("~/images/"+ (employee.PhotoPath ?? "noimage.jpg"))" asp-append-version="true" />
          <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
            <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
            <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id"  class="btn btn-danger m-1">Delete</a>
          </div>
        </div>  
        }
    </div>