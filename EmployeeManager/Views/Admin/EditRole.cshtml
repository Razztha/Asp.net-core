@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>
<form asp-controller="admin" asp-action="editrole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Id" disabled />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="RoleName" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

<div class="card mt-3">
    <div class="card-header">
        `<h5>Users in this role</h5>
    </div>
    <div class="card-body">
        @{ 
            if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <div class="card-title">@user</div>
                }
            }
    <div>
        <h5 class="card-title">None at the moment</h5>
    </div>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or remove users from this role</a>
    </div>
</div>