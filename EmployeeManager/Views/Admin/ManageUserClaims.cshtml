@model UserClaimViewModel

@{
    ViewBag.Title = "Manage User Claims";
}

    <form method="post">
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Manage user claims</h3>
            </div>
            <div class="card-body">
                <input hidden asp-for="UserId" />
                @for (int i = 0; i < Model.UserClaims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.UserClaims[i].ClaimType" />
                        <input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.UserClaims[i].IsSelected">
                            @Model.UserClaims[i].ClaimType
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>